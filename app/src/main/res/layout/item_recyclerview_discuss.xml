<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/edge_margin">
    <ImageView
        android:id="@+id/iv_discuss_user_head"
        android:layout_alignParentLeft="true"
        app:srcCompat="@mipmap/images"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30" />
    <TextView
        android:id="@+id/tv_discuss_name"
        android:layout_alignTop="@id/iv_discuss_user_head"
        android:layout_marginTop="@dimen/dp_2"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@+id/iv_discuss_user_head"
        android:text="dsdsdsds"
        android:textSize="@dimen/dp_14"
        android:textColor="@color/material_grey_50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_discuss_time"
        android:layout_alignBottom="@+id/tv_discuss_name"
        android:layout_toRightOf="@id/tv_discuss_name"
        android:layout_marginLeft="15dp"
        android:text="dsdsds"
        android:textSize="8dp"
        android:textColor="@color/material_grey_50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_discuss_msg"
       android:layout_toRightOf="@id/iv_discuss_user_head"
        android:layout_below="@id/iv_discuss_user_head"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="dsdsds"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/dp_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
