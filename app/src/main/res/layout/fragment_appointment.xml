<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_grey_200"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.coahr.fanoftruck.widgets.TittleBar.MyTittleBar
        android:id="@+id/mytitle"
        app:tittle="保养预约"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="@dimen/edge_margin"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:padding="@dimen/edge_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="认证信息"
                    android:textColor="@color/material_blue_500"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:padding="@dimen/edge_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_1"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/red_1"
                        android:textSize="@dimen/dp_14"
                        android:text="*"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/text1"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_14"
                        android:text="预约车辆"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content" />
                        <EditText
                            android:id="@+id/service_car_frameno"
                            style="@style/normal_edittext_style"
                            android:layout_toRightOf="@+id/text1"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:hint="请输入车架号"
                            android:textSize="@dimen/dp_14"
                            android:textColor="@color/black"
                            android:minWidth="@dimen/dp_60"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/select_car_no"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/red_1"
                        android:textSize="@dimen/dp_14"
                        android:text="选择车辆"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:padding="@dimen/edge_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/text2"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_14"
                        android:text="车牌号码"
                        android:layout_width="78dp"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:id="@+id/service_car_carno"
                        style="@style/normal_edittext_style"
                        android:layout_toRightOf="@+id/text2"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:textSize="@dimen/dp_14"
                        android:textColor="@color/black"
                        android:minWidth="@dimen/dp_60"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:padding="@dimen/edge_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_2"
                        android:text="*"
                        android:textSize="@dimen/dp_14"
                        android:textColor="@color/red_1"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/text3"
                        android:gravity="center_vertical"
                       android:layout_toRightOf="@+id/tv_2"
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_14"
                        android:text="预约人"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:id="@+id/user_name"
                        style="@style/normal_edittext_style"
                        android:layout_toRightOf="@+id/text3"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:hint="请输入预约人姓名"
                        android:textSize="@dimen/dp_14"
                        android:textColor="@color/black"
                        android:minWidth="@dimen/dp_60"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:padding="@dimen/edge_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_3"
                        android:text="*"
                        android:textSize="@dimen/dp_14"
                        android:textColor="@color/red_1"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/text4"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_3"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_14"
                        android:text="联系电话"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:id="@+id/user_phone"
                        style="@style/normal_edittext_style"
                        android:layout_toRightOf="@+id/text4"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:hint="请输入联系人电话"
                        android:textSize="@dimen/dp_14"
                        android:textColor="@color/black"
                        android:minWidth="@dimen/dp_60"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:padding="@dimen/edge_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_4"
                        android:text="*"
                        android:textSize="@dimen/dp_14"
                        android:textColor="@color/red_1"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/text5"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_4"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_14"
                        android:text="预约时间"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/appoint_time"
                        android:layout_toRightOf="@+id/text5"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:textSize="@dimen/dp_14"
                        android:textColor="@color/black"
                        android:minWidth="@dimen/dp_60"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/select_time"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/material_grey_550"
                        android:textSize="@dimen/dp_14"
                        android:text="选择时间"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:padding="@dimen/edge_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="保养服务"
                    android:textColor="@color/material_blue_500"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/re_service_tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>
            </android.support.v7.widget.CardView>


            <LinearLayout
                android:padding="@dimen/edge_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="认证信息"
                    android:textColor="@color/material_blue_500"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/input_describe"
                    android:gravity="top"
                    android:hint="请输入故障描述（1～50字）"
                    style="@style/normal_edittext_style"
                    android:lines="5"
                    android:textSize="@dimen/dp_14"
                    android:textColor="@color/black"
                    android:padding="@dimen/edge_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.CardView>
            <TextView
                android:id="@+id/tv_submit"
                android:layout_marginTop="@dimen/dp_30"
                android:padding="@dimen/edge_margin"
                android:textColor="@color/white"
                android:text="提交审核"
                android:gravity="center"
                android:background="@drawable/business_shape_bule700_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
