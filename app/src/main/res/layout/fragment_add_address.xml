<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:orientation="vertical">
    <com.coahr.fanoftruck.widgets.TittleBar.MyTittleBar
        android:id="@+id/myaddress_mytitle"
        app:tittle="添加地址"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:padding="@dimen/edge_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:padding="@dimen/edge_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
           <TextView
               android:id="@+id/text1"
               android:layout_alignParentLeft="true"
               android:layout_centerVertical="true"
               android:textSize="@dimen/dp_14"
               android:textColor="@color/black"
               android:text="收货人："
               android:minWidth="80dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/add_userName"
                android:hint="请输入收货人姓名"
                style="@style/normal_edittext_style"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/text1"
                android:minWidth="80dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/material_grey_200"/>
    <RelativeLayout
        android:padding="@dimen/edge_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text2"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/dp_14"
            android:textColor="@color/black"
            android:text="联系方式："
            android:minWidth="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/add_user_phone"
            android:hint="请输入收货号码"
            style="@style/normal_edittext_style"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/text2"
            android:minWidth="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/material_grey_200"/>
    <RelativeLayout
        android:padding="@dimen/edge_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text3"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/dp_14"
            android:textColor="@color/black"
            android:text="详细地址："
            android:minWidth="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/add_user_address"
            android:hint="请输入收货地址"
            style="@style/normal_edittext_style"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/text3"
            android:minWidth="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/material_grey_200"/>
    <TextView
        android:id="@+id/tv_submit"
        android:layout_marginTop="@dimen/dp_30"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/dp_14"
        android:text="确认"
        android:background="@drawable/business_shape_bule700_white"
        android:padding="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
