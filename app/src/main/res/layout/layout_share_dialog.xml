<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/share_dialog"
    >

    <LinearLayout
        android:padding="@dimen/edge_margin"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_wx_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/wx"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center"
            android:text="微信"
            android:textColor="@color/material_blue_550"
            android:textSize="@dimen/dp_14" />
        <View
            android:background="@color/material_grey_200"
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_pyq_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/pyq"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center"
            android:text="朋友圈"
            android:textColor="@color/material_blue_550"
            android:textSize="@dimen/dp_14" />
    </LinearLayout>
</FrameLayout>
