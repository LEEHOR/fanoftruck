<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextureView
        android:id="@+id/sv_record"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <ImageView
        android:id="@+id/iv_switch"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/dp_20"
        app:srcCompat="@drawable/record_camera_switch_normal" />




        <!-- 开始/结束 录制按钮 -->
        <ImageView
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="15dp"
            android:id="@+id/record_control"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/recordvideo_start" />
        <ImageView
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginLeft="@dimen/edge_margin"
            android:id="@+id/record_pause"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:srcCompat="@drawable/control_pause"
            android:visibility="gone" />

        <Chronometer
            android:layout_gravity="right|bottom"
            android:layout_marginRight="@dimen/edge_margin"
           android:layout_marginBottom="50dp"
            android:id="@+id/record_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/material_red_600"
            android:format="%s" />
</FrameLayout>