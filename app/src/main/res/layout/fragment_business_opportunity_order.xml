<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.coahr.fanoftruck.widgets.TittleBar.MyTittleBar
        android:layout_width="match_parent"
        app:tittle="商机订单"
        android:id="@+id/mytitle_business"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/material_grey_200"/>
    <android.support.design.widget.TabLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_fff_background"
        app:tabIndicatorColor="@color/material_grey_700"
        app:tabTextAppearance="@style/TextAppearance.Design.Tab.Custom"
        app:tabMode="scrollable">
    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/businss_viewPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
