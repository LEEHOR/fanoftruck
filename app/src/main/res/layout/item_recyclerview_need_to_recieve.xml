<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_commodity_order"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:padding="@dimen/edge_margin"
    android:background="@drawable/bg_fff_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="@dimen/dp_14"
            android:id="@+id/text0"
            android:text="订单时间："
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="@dimen/dp_14"
            android:id="@+id/tv_time"
            android:layout_toRightOf="@+id/text0"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="@dimen/dp_14"
            android:id="@+id/tv_order_status"
            android:layout_alignParentRight="true"
            android:textColor="@color/prominent_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_marginTop="@dimen/dp_10"

        android:background="@color/material_grey_300"
        android:layout_width="match_parent"
        android:layout_height="1px"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_commodity"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/app_background_color"
        android:layout_width="match_parent"
        android:layout_height="1px"/>


    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="@dimen/dp_14"
            android:id="@+id/text1"
            android:text="合计："
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="@dimen/dp_14"
            android:id="@+id/tv_totalprice"
            android:textColor="@color/prominent_text_color"
            android:layout_toRightOf="@+id/text1"
            android:layout_centerVertical="true"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <TextView
            android:textSize="@dimen/dp_14"
            android:id="@+id/tv_see_logistics"
            android:background="@drawable/bg_red_frame_background"
            android:textColor="@color/prominent_text_color"
            android:padding="@dimen/dp_4"
            android:text="查看物流"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toLeftOf="@+id/tv_ensure_recieve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/dp_14"
            android:id="@+id/tv_ensure_recieve"
            android:background="@drawable/bg_red_frame_background"
            android:textColor="@color/prominent_text_color"
            android:padding="@dimen/dp_4"
            android:text="确认收货"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>