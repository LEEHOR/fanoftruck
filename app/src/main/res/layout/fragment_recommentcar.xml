<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_grey_200"
    android:orientation="vertical">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="@dimen/edge_margin"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="@dimen/edge_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="购车人信息"
                    android:textColor="@color/material_blue_500"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <android.support.v7.widget.CardView
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:padding="@dimen/edge_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/text2"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/material_grey_550"
                        android:textSize="@dimen/dp_14"
                        android:text="预约人"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content" />
                    <EditText
                        style="@style/normal_edittext_style"
                        android:layout_toRightOf="@+id/text2"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:hint="请输入预约人姓名"
                        android:textSize="@dimen/dp_14"
                        android:textColor="@color/black"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:padding="@dimen/edge_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/text1"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/material_grey_550"
                        android:textSize="@dimen/dp_14"
                        android:text="手机号码"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content" />
                    <EditText
                        style="@style/normal_edittext_style"
                        android:layout_toRightOf="@+id/text1"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:hint="请输入手机号"
                        android:textSize="@dimen/dp_14"
                        android:textColor="@color/black"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:padding="@dimen/edge_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/text3"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/material_grey_550"
                        android:textSize="@dimen/dp_14"
                        android:text="验证码"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content" />
                    <EditText
                        style="@style/normal_edittext_style"
                        android:layout_toRightOf="@+id/text3"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:hint="请输入车架号"
                        android:textSize="@dimen/dp_14"
                        android:textColor="@color/black"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" />
                    <com.coahr.fanoftruck.widgets.BlockTextView
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/white"
                        android:background="@drawable/business_shape_bule700_white"
                        android:textSize="@dimen/dp_14"
                        android:text="验证码"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:padding="@dimen/edge_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/text4"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/material_grey_550"
                        android:textSize="@dimen/dp_14"
                        android:text="所在地区"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        style="@style/normal_edittext_style"
                        android:layout_toRightOf="@+id/text4"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:textSize="@dimen/dp_14"
                        android:textColor="@color/black"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/material_grey_550"
                        android:textSize="@dimen/dp_14"
                        android:text="购买车辆"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:padding="@dimen/edge_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/text5"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/material_grey_550"
                        android:textSize="@dimen/dp_14"
                        android:text="预约车辆"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        style="@style/normal_edittext_style"
                        android:layout_toRightOf="@+id/text5"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:textSize="@dimen/dp_14"
                        android:textColor="@color/black"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/material_grey_550"
                        android:textSize="@dimen/dp_14"
                        android:text="请选择车辆"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:padding="@dimen/edge_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/text6"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/material_grey_550"
                        android:textSize="@dimen/dp_14"
                        android:text="请选择商品数量"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/material_grey_550"
                        android:textSize="@dimen/dp_14"
                        android:text="请选择商品数量"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:padding="@dimen/edge_margin"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_30"
                android:text="提交"
                android:background="@drawable/business_shape_bule700_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
