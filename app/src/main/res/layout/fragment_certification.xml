<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_grey_200"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.coahr.fanoftruck.widgets.TittleBar.MyTittleBar
        android:id="@+id/mytittle"
        app:tittle="实名认证"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="@dimen/edge_margin"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                app:cardCornerRadius="@dimen/dp_5"
                app:cardElevation="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                    <RelativeLayout
                        android:padding="@dimen/edge_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_1"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/dp_14"
                            android:textColor="@color/red_1"
                            android:text="*"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_2"
                            android:layout_toRightOf="@+id/tv_1"
                            android:text="姓名"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dp_14"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:id="@+id/ed_ID_name"
                            style="@style/normal_edittext_style"
                            android:layout_toRightOf="@+id/tv_2"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_30"
                            android:textSize="@dimen/dp_14"
                            android:textColor="@color/black"
                            android:hint="请输入真实姓名"
                            android:minWidth="@dimen/dp_60"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_marginTop="15dp"
                app:cardCornerRadius="@dimen/dp_5"
                app:cardElevation="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:padding="@dimen/edge_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_3"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_14"
                        android:text="上传身份证正面"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <FrameLayout
                        android:id="@+id/iv_fragment"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_below="@+id/tv_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.CardView
                            app:cardElevation="0dp"
                            app:cardUseCompatPadding="true"
                            app:cardPreventCornerOverlap="false"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/iv_ID_z"
                               android:layout_gravity="center_horizontal"
                                android:layout_width="250dp"
                                android:layout_height="120dp" />
                        </android.support.v7.widget.CardView>
                    </FrameLayout>


                    <FrameLayout
                        android:id="@+id/tv_fragment"
                        android:layout_marginTop="@dimen/dp_60"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/tv_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:drawableLeft="@mipmap/images"
                            android:drawablePadding="15dp"
                            android:gravity="center_vertical"
                            android:text="点击拍摄"
                            android:textColor="@color/material_grey_550"
                            android:textSize="@dimen/dp_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </FrameLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_marginTop="15dp"
                app:cardCornerRadius="@dimen/dp_5"
                app:cardElevation="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:padding="@dimen/edge_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_4"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_14"
                        android:text="上传身份证反面"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <FrameLayout
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_below="@+id/tv_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.CardView
                            app:cardElevation="0dp"
                            app:cardUseCompatPadding="true"
                            app:cardPreventCornerOverlap="false"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_gravity="center_horizontal"
                                android:layout_width="250dp"
                                android:layout_height="120dp" />
                        </android.support.v7.widget.CardView>

                    </FrameLayout>

                    <FrameLayout
                        android:layout_marginTop="@dimen/dp_60"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/tv_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:drawableLeft="@mipmap/images"
                            android:drawablePadding="15dp"
                            android:gravity="center_vertical"
                            android:text="点击拍摄"
                            android:textColor="@color/material_grey_550"
                            android:textSize="@dimen/dp_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </FrameLayout>
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_marginTop="@dimen/dp_30"
                android:padding="@dimen/dp_10"
                android:textSize="@dimen/dp_14"
                android:textColor="@color/colorWhite"
                android:text="下一步"
                android:gravity="center"
                android:background="@drawable/business_shape_bule700_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
