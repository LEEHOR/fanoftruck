<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="@dimen/edge_margin"
    app:cardCornerRadius="@dimen/dp_5">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:orientation="horizontal"
            android:padding="@dimen/edge_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_business_name"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_14"
                android:text="张三"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
                <TextView
                    android:layout_centerVertical="true"
                    android:background="@drawable/business_shape_green_white"
                    android:padding="@dimen/dp_5"
                    android:text="已成单"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/dp_14"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:orientation="horizontal"
            android:padding="@dimen/edge_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_1"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/images"/>
            <TextView
                android:id="@+id/tv_business_phone"
                android:layout_toRightOf="@+id/iv_1"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="dsdsdsdsdd"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:padding="@dimen/edge_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_1"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/dp_14"
                android:textColor="@color/black"
                android:text="意向商品："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_business_mall"
                android:layout_toRightOf="@+id/tv_1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:textSize="@dimen/dp_14"
                android:textColor="@color/black"
                android:text="意向商品"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_business_count"
                android:textSize="@dimen/dp_14"
                android:textColor="@color/black"
                android:text="数量："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_business_count"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/dp_14"
                android:textColor="@color/black"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
