<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_fff_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/coupon_Left"
            android:layout_width="100dp"
            android:layout_height="80dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                app:srcCompat="@mipmap/standy_coupon" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/coupon_tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/dp_14"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/coupon_tv_used"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/coupon_tv_price"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/bg_white_frame_background"
                    android:gravity="center"
                    android:text="去使用"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/dp_10" />
            </RelativeLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:padding="@dimen/edge_margin"
            android:layout_alignBottom="@+id/coupon_Left"
             android:layout_alignTop="@+id/coupon_Left"
            android:layout_toRightOf="@+id/coupon_Left">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/coupon_tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="hahhaaahha"
                        android:textColor="@color/material_red_600"
                        android:textSize="@dimen/dp_14"
                         />
                    <!--android:textStyle="bold"-->

                    <TextView
                        android:id="@+id/coupon_tv_expiretime"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="hahhaaahha"
                        android:textColor="@color/material_grey_550"
                        android:textSize="@dimen/dp_10" />

                    <TextView
                        android:id="@+id/coupon_tv_discription"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="hahhaaahha"
                        android:textColor="@color/material_grey_550"
                        android:textSize="@dimen/dp_12" />
                </LinearLayout>

            </RelativeLayout>
        </FrameLayout>

    </RelativeLayout>
</LinearLayout>
